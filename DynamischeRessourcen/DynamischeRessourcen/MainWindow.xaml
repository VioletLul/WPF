<Window x:Class="DynamischeRessourcen.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Window.Resources>
        <SolidColorBrush x:Key="hintergrund" Color="Lavender" />
    </Window.Resources>
    
    <Grid>
        <StackPanel>
            <Button Width="200" Height="25" Content="Button1" Background="{StaticResource hintergrund}" />
            <Button Width="200" Height="25" Content="Button2" Background="{DynamicResource hintergrund}" Click="Button_Click" />
        </StackPanel>    
    </Grid>
</Window>
