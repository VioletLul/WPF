<Window x:Class="Slider_Steuerelement.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Slider_Steuerelement"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <TextBlock x:Name="TbInfo"></TextBlock>
            <Slider Minimum="0" Maximum="100" IsSnapToTickEnabled="True" TickFrequency="10" Value="{Binding Path=Text, ElementName=TbInfo}"></Slider>
        </StackPanel>
    </Grid>
</Window>