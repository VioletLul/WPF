<Window x:Class="ValidationsOnExceptions.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <StackPanel VerticalAlignment="Center">
        <TextBox Width="200" Height="25" Text="{Binding Message, ValidatesOnExceptions=True, UpdateSourceTrigger=PropertyChanged}" />
        <Button Width="200" Height="25" Content="Button"></Button>
        </StackPanel>
    </Grid>
</Window>
