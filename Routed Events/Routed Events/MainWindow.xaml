<Window x:Class="Routed_Events.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Routed_Events"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" TextBoxBase.TextChanged="MainWindow_OnTextChanged" PreviewTextInput="MainWindow_OnPreviewTextInput">
    <Grid TextBoxBase.TextChanged="TextBoxBase_OnTextChanged">
        <TextBox></TextBox>
        <TextBox HorizontalAlignment="Center" Margin="0,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="780" TextChanged="TextBox_TextChanged" />
        <RadioButton x:Name="RadioButton1" Content="Handle TextBox.TextChanged in TextBox" HorizontalAlignment="Left" Margin="10,32,0,0" VerticalAlignment="Top" />
        <RadioButton x:Name="RadioButton2" Content="Handle TextBox.TextChanged in Grid" HorizontalAlignment="Left" Margin="10,51,0,0" VerticalAlignment="Top" />
        <RadioButton x:Name="RadioButton3" Content="Handle TextBox.TextChanged in Window" HorizontalAlignment="Left" Margin="10,70,0,0" VerticalAlignment="Top" />
    </Grid>
</Window>